<?xml version="1.0" encoding="UTF-8" ?>
<form>
<fieldset name="hello_form">
    <field 
        name="id" 
        type="hidden" >
    </field>
        <!-- Select Field for Name -->
    <field 
        name="name" 
        type="name" 
        label="Select Name" 
        description="Choose a person from the list." 
        required="true">
    </field>

    <!-- Textarea Field for Description -->
    <field 
        name="description" 
        type="textarea" 
        label="Description" 
        description="Enter the person's description."
        required="true"
        rows="5" 
        cols="40" />
</fieldset>

</form>